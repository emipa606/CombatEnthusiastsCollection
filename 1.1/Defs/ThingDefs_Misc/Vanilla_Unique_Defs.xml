<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Triple Action Thunder 50 BMG -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Thunder</defName>
    <label>thunder bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>40</damageAmountBase>
      <speed>80</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseGun">
    <defName>CEC_Thunder</defName>
    <label>Thunder</label>
    <description>A rare breech-loaded single shot handgun that uses anti-materiel rounds.</description>
    <graphicData>
      <texPath>Things/Thunder</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <MarketValue>2500</MarketValue>
      <Mass>7.5</Mass>
      <AccuracyTouch>0.86</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.46</AccuracyMedium>
      <AccuracyLong>0.30</AccuracyLong>
      <RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Thunder</defaultProjectile>
        <warmupTime>3.0</warmupTime>
        <range>20</range>
        <soundCast>Shot_TurretSniper</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!-- Tactical Sledgehammer -->
  <ThingDef ParentName="ResourceVerbBase">
    <defName>CEC_TacticalSledgeHammer</defName>
    <label>tactical sledgehammer</label>
    <description>A sledgehammer equipped with a thermal scope, tacitcal flashlight and laser sights. The handle also includes an angled foregrip for increased ergonomics. Really, what makes this expensive is the thermal scope.</description>
    <graphicData>
      <texPath>Things/TacticalSledgehammer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>45</equippedAngleOffset>
    <statBases>
      <MarketValue>1500</MarketValue>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>8.76</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>1</stackLimit>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>35</power>
        <cooldownTime>2.3</cooldownTime>
      </li>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>broken scope glass shards</label>
        <capacities>
          <li>Stab</li>
          <li>Scratch</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
